@model List<Permit>

@{
    ViewBag.Title = "All Permit(s)"; 
    int count = 0;
    
    var now = DateTime.UtcNow.AddHours(1);
}

<center>
    <div class="card" style="margin-top: 2em; padding: 0.5em;">
        <h2 class="btn btn-success col-md-3">
            Permit(s)
        </h2>
