@using GOTEX.Core.Utilities
@model Product

@{
    Layout = null;
}
<form action="/Admin/EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="form-group">
        <label asp-for="Name" style="float:left"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" name="Submit" value="Update" class="form-control btn btn-sm btn-info" />
    </div>
</form>