@using Microsoft.AspNetCore.Razor.Language.Extensions
@model GOTEX.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<center>
    <div class="card" style="margin-top:  2em; padding: 1em;">
        <div style="display: inline-flex; justify-content: center; padding-left: 1em; padding-right: 1em; color: white;">
            <div class="card" style="width: 19em; margin-right: 3em;padding-top: 3em; background-color: #0b2e13;">
                <div class="card-body">
                    <div class="card-title">
                        <span style="float: left;">@Model.MyDesk</span> <span style="float: right"><i class="fa fa-user"></i></span>
                    </div>
                    <br/>
                    <p class="card-text" style="float: left"><a href="/Admin">My Desk</a></p>
                </div>
            </div>
            <div class="card" style="width: 19em; margin-right: 3em; padding-top: 3em; background-color: #242634;">
                <div class="card-body">
                    <div class="card-title">
                        <span style="float: left;">@Model.All</span><span style="float: right"><i class="fa fa-box"></i></span>
                    </div>
                    <br/>
                    <p class="card-text" style="float: left; color: white !important;">Application(s)</p>
                </div>
            </div>
            <div class="card" style="width: 19em; margin-right: 3em; padding-top: 3em; background-color: #0E566C;">
                <div class="card-body">
                    <div class="card-title">
                        <span style="float: left">@Model.Processing</span><span style="float: right"><i class="fa fa-inbox"></i></span>
                    </div>
                    <br/>
                    <p class="card-text" style="float: left; color: white !important;">Application(s) being processed</p>
                </div>
            </div>
            @if (!User.IsInRole("Company"))
            {
                <div class="card" style="width: 19em; padding-top: 3em; background-color: #8a1f11;">
                    <div class="card-body">
                        <div class="card-title">
                            <span style="float: left">@Model.Declined</span><span style="float: right"><i class="fa fa-minus"></i></span>
                        </div>
                        <br/>
                        <p class="card-text" style="float: left; color: white !important;">Application(s) declined</p>
                    </div>
                </div>
            }
            @if (User.IsInRole("Company"))
            {
                <div class="card" style="min-width: 19em; padding-top: 3em; background-color: #8a1f11;">
                    <div class="card-body">
                        <div class="card-title">
                            <span style="float: left">@Model.Approved</span><span style="float: right"><i class="fa fa-check"></i></span>
                        </div>
                        <br/>
                        <p class="card-text" style="float: left; color: white !important;">Approved Approval(s)</p>
                    </div>
                </div>
            }
        </div>
        <div>
            @if (Model.Messages.Count > 0 && Model.Messages
                .OrderByDescending(x => x.Id)
                .FirstOrDefault(y => !y.IsRead) != null)
            {
                <div class="alert alert-warning alert-dismissable">
                <span class="glyphicon glyphicon-exclamation-sign"></span> 
                    You have a new message that is unread!
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    
                </div>
            }
        </div>
        <div style="margin-top: 2em;">
            
            <div class="col-md-6" style="float: left">
                <div class="col-md-12">
                    <h3>Recent Messages</h3>
                </div>
                
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Description</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Messages)
                    {
                        <tr>
                            <td>
                                @if (item.IsRead)
                                {
                                    <a 
                                        href="#" 
                                        data-toggle="modal"
                                        data-id="@item.Id"
                                        data-target="#msgModal" 
                                        data-title="@item.Subject" 
                                        data-message="@item.Content"
                                        id="msgmodal"
                                        aria-expanded="False" class="msgmodal">
                                        <i class="fa fa-inbox gray"></i>
                                    </a>
                                }
                                else
                                {
                                    
                                    <a 
                                        href="#" 
                                        data-toggle="modal"
                                        data-id="@item.Id"
                                        data-target="#msgModal" 
                                        data-title="@item.Subject" 
                                        data-message="@item.Content"
                                        id="msgmodal"
                                        aria-expanded="False" class="msgmodal">
                                        <i class="fa fa-inbox"></i>
                                    </a>
                                }
                            </td>
                            <td style=" text-align: left;">
                               @item.Subject
                            </td>
                            <td style=" text-align: left;">
                                @{
                                    var diff = DateTime.Now - item.Date;
                                    if (diff.Days >= 7)
                                    {
                                        var weeks = (int) (diff.Days / 7);

                                        if (weeks > 1)
                                        {
                                            <span>@weeks weeks ago</span>
                                        }
                                        else if (weeks == 1)
                                        {
                                            <span>@weeks week ago</span>
                                        }
                                    }
                                    else if (diff.Days >= 1)
                                    {
                                        if (diff.Days > 1)
                                        {
                                            <span>@diff.Days days ago</span>
                                        }
                                        else if (diff.Days == 1)
                                        {
                                            <span>Yesterday</span>
                                        }
                                    }
                                    else if (diff.Hours >= 1)
                                    {
                                        if (diff.Hours > 1)
                                        {
                                            <span>@diff.Hours Hours ago</span>
                                        }
                                        else if (diff.Hours == 1)
                                        {
                                            <span>@diff.Hours Hour ago</span>
                                        }
                                    }
                                    else
                                    {
                                        <span>@diff.Minutes Minutes ago</span>
                                    }
                                }
                            </td>
                        </tr>
                    }
                    @if (Model.Messages.Count == 0)
                    {
                        <tr>
                            <td colspan="3" style=" text-align: center;">No messages</td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="2"><a href="/Application/Messages">View all Message(s)</a></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-md-6" style=" float: right;">
                <div class="col-md-12">
                    <h3>Application Chart</h3>
                </div>
                
                <input type="hidden" id="allApplications" value="@Model.All"/>
                <input type="hidden" id="processing" value="@Model.Processing"/>
                <input type="hidden" id="declined" value="@Model.Declined"/>
                <input type="hidden" id="desk" value="@Model.MyDesk"/>
                <input type="hidden" id="approved" value="@Model.Approved"/>
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>
    
</center>
<div class="modal" role="dialog" tabindex="-1" id="msgModal">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');
    var all = $("#allApplications").val();
    var proc = $("#processing").val();
    var declined = $("#declined").val();
    var desk = $("#desk").val();
    var approved =$("#approved").val();
    
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            // labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            labels: ['My Desk', 'All Applications', 'Applications being processed', 'Applications Declined', 'Approved License(s)'],
            datasets: [{
                label: '# of Votes',
                data: [desk, all,  proc, declined, approved],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    // 'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)',
                    // 'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

</script>
<script>
    $(document).ready(function (){
        $(".msgmodal").click(function (e){
            e.preventDefault();
            var msg = $(this).data('message');
            $("#modalBody").html(msg);
            $("#modalTitle").html($(this).data('title'));
            $("#msgModal").show();
            
            $.get('/Application/ReadMessage/' + $(this).data('id'));
        });
    });
</script>