@model Permit

@{
    
}

<div style="text-align: center; box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);" >
    <div class="btn bg1 col-md-12" style="margin-top:-30px; height: 100px; padding-top: 2em; color: yellow;">
        <span style="float: left; font-size: xx-large;">Verify Permit</span>
        <span style="float: right; padding-top: 1em; color: yellow !important;"><a href="/">Home</a> </span>
    </div>
    <hr/>
    <div style="padding:5em; align-content: center;">
        <label style="font-size: x-large; margin-top: 2em;">Check the validity of a DPR Gas Permit</label>
        <hr/>
        <div style="margin-right:10em; margin-left:10em; padding: 3em; background-color: #d3d9df;">
            @using (Html.BeginForm("Index", "Validate", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Type" class="control-label col-md-4">Application Permit Number</label>
                        <div class="col-md-7">
                            <input type="text" name="permitno" id="permitNo" required class="form-control" placeholder="e.g.: DPR/GATEX/15/1234567/N1234"/>
                        </div>

                    </div>
                    <div class="form-group">
                        <p class="txtcenter">
                            <input type="submit" value="Search" class="btn btn-sm btn-success"/>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <table class="table table-striped">
       @if (Model != null)
       {
           <tr>
               <td>Permit Number</td>
               <td>@Model.PermitNumber</td>
           </tr>
           <tr>
               <td>Company Name</td>
               <td>@Model.Application.User.Company.Name</td>
           </tr>
           <tr>
               <td>Application Tyep</td>
               <td>@Model.Application.ApplicationType.Name</td>
           </tr>
           <tr>
               <td>Fee</td>
               <td>@Model.Application.Fee.ToString("$ ###,##0.00")</td>
           </tr>
           <tr>
               <td>Date Issued</td>
               <td>@Model.DateIssued.ToLongDateString()</td>
           </tr>
           <tr>
               <td>Expiry Date</td>
               <td>@Model.ExpiryDate.ToLongDateString()</td>
           </tr>
       }
       else
       {
           <tr>
               <td>
                   <span class="alert alert-warning">@ViewBag.Msg</span>
               </td>
           </tr>
       }
    </table>
</div>