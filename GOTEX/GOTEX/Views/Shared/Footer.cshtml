         $('.btnPassword').click(function (e){
             e.preventDefault();
            var op = $('.op').val();
            var np = $('.np').val();
            var cp = $('.cp').val();
            
            if (op && np && cp !== ""){
                if (cp !== np){
                    alert("New password mismatch, please try again");
                }
                else if (op === np){
                    alert("New password cannot be same as old password, please try again");
                }
                else if (np === cp){
                    $('.modal-content').addClass('Submitloader');
                    $('#modalPassword form').submit();
                } 
            }
            else{
                alert("Password cannt be empty, please try again");
            }
        });
    })

</script>
